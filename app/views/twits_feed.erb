<div class='container'>

  <form method="get" action="/logout">
    <button type="submit" class="btn btn-default">Logout</button>
  </form>

  <form method="get" action="/profile/<%= session[:user_id] %>">
    <input type="submit" class="btn btn-primary" >Profile Page</button>
  </form>

  <form method="post" action="/twits">
    <input class="form-control input-lg"  type="text" name="message"></textarea>
    <input type="submit" class="btn btn-primary btn-lg" value="TWIT">
  </form>


  <% if flash[:error] %>
  <p class="notice"><%= flash[:error] %></p>
    <% end %>

    <br>

    <% @all_twits.reverse_each do |twit| %>
    <a href="/profile/<%= @all_users.find(twit.user_id).id %>"><%= @all_users.find(twit.user_id).name %></a>
    <br>
    <blockquote><%= twit.message %></blockquote>
    <br>
    <br>
    <%end  %>
  </div>
